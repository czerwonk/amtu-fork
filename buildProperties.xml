<property file="${basedir}\java_build.properties"/>
<property file="${user.home}\java_build.properties"/>
<property name="javaBuildDir" location="${basedir}"/>
<property name="srcDir" location="${basedir}\src" />
<property name="binDir" location="${basedir}\ant_build_bin"/>
<property name="docDir" location="${basedir}\doc"/>
<property name="libDir" location="${javaBuildDir}\lib"/>

<property name="metainfSubDir" value="META-INF"/>
<property name="metainfDir" location="${basedir}/${metainfSubDir}"/>
<property name="webinfSubDir" value="WEB-INF"/>
<property name="webinfDir" location="${basedir}/${webinfSubDir}"/>

<property name="resourceSubDir" value="resources"/>
<property name="resourceDir" location="${basedir}/${resourceSubDir}"/>
<property name="testingResourceDir" location="${resourceSubDir}/testing"/>

<property name="deployFilesSubDir" value="deployFiles"/>
<property name="deployFilesDir" location="${basedir}/${deployFilesSubDir}"/>

<property name="debugMode" value="off"/>

<property name="jarFile" location="${libDir}/${ant.project.name}.jar" />

<property name="javadocPackageNames" value="com.amazon.*"/>

<path id="default.class.path">
	<fileset dir="${libDir}">
		<include name="**/*.jar"/>
		<include name="**/*.zip"/>
	</fileset>
</path>

<path id="project.class.path">
	<path refid="default.class.path"/>
</path>
